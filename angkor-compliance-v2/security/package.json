{
  "name": "angkor-compliance-security",
  "version": "1.0.0",
  "description": "Security testing and validation for Angkor Compliance Platform",
  "main": "index.js",
  "scripts": {
    "security:scan": "npm audit && npm run security:owasp && npm run security:dependency",
    "security:owasp": "zap-baseline.py -t http://localhost:3001",
    "security:dependency": "npm audit && snyk test",
    "security:penetration": "node penetration-testing/run-penetration-tests.js",
    "security:audit": "node security-audit/run-security-audit.js",
    "security:compliance": "node compliance-checking/run-compliance-check.js",
    "security:all": "npm run security:scan && npm run security:penetration && npm run security:audit && npm run security:compliance",
    "security:report": "node reporting/generate-security-report.js",
    "security:monitor": "node monitoring/security-monitor.js",
    "security:install": "npm install -g @zaproxy/zap2docker-stable snyk"
  },
